#authors
	width 100%
	padding 84px 0 99px
	background-color: #005BDB
	background-image: -webkit-linear-gradient( 0deg, rgb(14,151,234) 0%, rgb(15,100,217) 42%, rgb(15,48,200) 99%);
	position relative
	overflow hidden
	.container
		position relative
		z-index 9
.authors_circle
	position: absolute
	margin 0 auto
	border-radius: 50%
	border 1px solid rgb(244, 249, 252);
	opacity .11
	right auto
.authors_circle_1
	width: 750px;
	height: 750px;
	bottom: -375px
	left calc(50% - 375px)
	z-index: 0;
.authors_circle_2
	width: 1080px;
	height: 1080px;
	bottom: -540px
	left calc(50% - 540px)
	z-index: 1
.authors_circle_3
	width: 1410px;
	height: 1410px;
	bottom: -705px
	left calc(50% - 705px)
	z-index: 2
.authors_circle_4
	width: 1660px;
	height: 1660px;
	bottom: -830px
	left calc(50% - 830px)
	z-index: 3
.authors_general_title
	color #fff
	margin-bottom: 56px
.author
	overflow hidden
.author_veronika
	margin-top: -2px
#anna
	float left
	margin: 0 145px 0 9px
#veronika
	float: right
	margin 0 13px 0 0
.authors_container
	float left
	width 100%
.annas_container
	max-width 546px
.veronikas_container
	max-width 520px
	margin-left: 96px
.autors_container_title
	font-size: 24px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: #fff
	line-height: 1.334;
	margin: 80px 0 -1px
.autors_container_subtitle
	font-size: 20px;
	font-family: "OpenSansCondensedLight", sans-serif;
	color: #fff
	opacity .8
	line-height: 1.561;
	margin-bottom: 15px
.authors_container_list
	li
		color: #fff
		line-height: 1.3;
		margin-bottom: 8px
		position relative
		list-style none
		padding-left: 17px
		&:before
			content ''
			border-radius: 50%;
			background-color: rgb(110, 231, 242);
			position: absolute;
			left: 0
			top: 6px;
			width: 7px;
			height: 7px;
.veronikas_certificates
	text-align: center
	width 100%
	max-width 430px
	margin-top: 13px
	a
		img
			display: inline-block
			width 107px
.partners_button
	margin-top: 65px
	max-width 300px