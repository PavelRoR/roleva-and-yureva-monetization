#reveiws
	width 100%
	padding 85px 0 95px
.revs_general_title
	margin-bottom:  72px
#carousel_text
	width 100%
	max-width 923px
	margin 0 auto
.item
	padding-bottom: 15px
	a
		display block
		width 100%
		max-width 751px
		border-radius: 5px;
		border: 1px solid rgb(232, 232, 232);
		background-color: #fff
		box-shadow: 0px 4px 9px 0px rgba(0, 0, 0, 0.07);
		margin 0 auto
		img
			width: 100%
.carousel-indicators
	position: static
	margin 18px auto 0
.carousel-indicators
	li
		background-color: #b23016
		opacity: 0.302;
		width: 12px;
		height: 12px;
		border none
.carousel-indicators .active
		opacity 1
		background-color: #b23016
		border none
		margin 1px
.controls
	height 0
.carousel-control
	border-radius: 50%;
	background-color: #f2c22c
	background-image: none
	opacity 1
	text-shadow: none
	width: 50px;
	height: 50px;
	top calc(50% - 50px)
	font-size: 34px
	line-height: 50px
	font-family: "OpenSansCondensedBold", sans-serif;
	&.left
		background-color: #f2c22c;
		background-image: none
	&.right
		background-color: #f2c22c;
		background-image: none
	&:hover
		opacity .7