#main
	width 100%
	padding 0 0 60px
	background-color: #142328
	background-image: url(../img/bonus_main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
#header
	padding: 14px 0
	overflow hidden
	z-index: 9
	position relative
	margin-bottom: 15px
#logo
	float: left
	width 165px
	height auto
.contacts
	float: right
	text-align: right
	line-height  22px
	a
		&:focus
			text-decoration: none
		i
			color: #eec33f
			font-size: 15px
			margin: 0 10px 0 25px
			line-height: 15px
			vertical-align: baseline
		i+span
			line-height: 15px
			font-size: 15px;
			font-family: "OpenSans", sans-serif;
			color: rgba(#fff)
			opacity .8
			text-align: right;
			&:hover
				text-decoration underline
.fa-phone
	transform: rotate(90deg)
.tel:first-child
	.fas-phone
		margin-left: 0
.pre
	font-size: 16px;
	font-family: "OpenSansSemibold", sans-serif;
	text-transform: uppercase
	color: rgb(254, 254, 254);
	text-decoration: underline;
	line-height: 1.3
	small
		display block
		font-size: 70%
		text-transform: none
.main_title
	font-size: 44px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: rgb(254, 254, 254);
	line-height: 1.164;
	width 100%
	max-width: 680px;
	margin 25px auto
	small
		display block
.main_date
	font-size: 27px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: #ce2806
	line-height: 28px
	&:before
		content: url(../img/calendar.png)
		display: inline-block
		margin-right: 7px
		width: 28px
		height 28px
		vertical-align: bottom
	span
		color #fefefe
.main_authors
	font-size: 19px;
	font-family: "OpenSansCondensedBold", sans-serif;
	color: rgb(254, 254, 254);
	line-height: 1.4
	margin 20px 0 40px
	span
		font-family: 'OpenSansLight', sans-serif
		letter-spacing: -1.4px;