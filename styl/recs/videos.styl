#videos
    width 100%
    padding 60px 0
#videos_container
	width 100%
	max-width 650px
	margin 0 auto 40px
.videos_container_buttons
	width 100%
	text-align: center
	margin-bottom: 20px
	li
		display: inline-block
		width 100%
		max-width 130px
		margin 0 10px
		font-family: "OpenSansBoldItalic", sans-serif;
		background-color: #b23016
		height: 40px;
		line-height: 40px;
		text-align: center;
		border-radius: 10px
		transition: all .5 ease
		a
			width: 100%
			height 100%
			display inline-block
			transition: all .5 ease
			color: #fff
			&:focus
				text-decoration: none
			&:hover
				text-decoration: none
		&.ui-state-active
		&.ui-state-hover
			background-color: #f2c22c
			a
				color #000
.videos_day_container
	padding 20px
	background-color #fff
	border-radius: 5px
	// box-shadow: 0px 6px 10px 2px rgba(3,2,2,0.13);
	border 2px solid #f2c22c
.videos_day_title
	text-align: center
	font-size: 20px
	font-family: 'OpenSansCondensedBold', sans-serif
	margin-bottom: 15px
.videos_day_text
	padding-top: 10px
	font-size: 18px
	a
		color #23527c
		&:hover
			text-decoration: underline	
.buy_recs_text
	text-align: center
	font-size: 22px
.buy_recs_button
	margin 15px auto 60px
