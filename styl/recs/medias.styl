	#logo
		width 140px
	.contacts a i
	.contacts a i + span
		font-size: 12px
	#main
		padding-bottom: 30px
	.main_title
		font-size: 34px
	.main_date
		font-size: 24px
	#if, #plan, #prices, #reach, #videos
		padding 30px 0
	.general_title
		font-size: 24px
		margin-bottom: 30px
	.if_list li
	.plan_list li
	.reach_list li
		font-size: 18px
		margin-bottom: 10px
		padding-left: 13px
