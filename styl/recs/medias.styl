		min-height 541px
@media screen and (max-width 991px)
	#main
		padding-bottom: 40px
	#logo
		float: none
		display block
		margin: 0 auto
	.contacts
		float: none
		text-align: center
		a
			display: inline-block
			margin-top: 5px
	#if
	#plan
	#reach
	#prices
	#videos
		padding 40px 0
	#prices
		background-position: left center, right center
	.price
		margin-bottom: 20px
