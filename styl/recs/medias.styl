		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.prepayment
		margin-top: 10px
	.timer_title
		font-size: 24px
	.alert-danger
		font-size: 20px
		margin-top: 20px
	#videos_container
		margin-bottom: 20px
	.videos_container_buttons
		margin-bottom: 0
		li
			max-width 100px
			margin-bottom: 10px
	.buy_recs_button
		margin 0 auto 40px
	#footer h5
		font-size: 20px
		margin-bottom: 10px
	.soc_buttons a
		margin 0 8px 10px
	#footer #conditions, #footer p
		font-size: 12px
