#footer
	width 100%
	padding 30px 0
	background-color: #12181b
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0 0 20px
		font-family: 'OpenSansSemibold', sans-serif;
	p
	#conditions
		font-size: 14px;
		color: rgba(#fefefe, .6);
		line-height: 1.3;
		font-family: 'OpenSansLight', sans-serif
	#conditions
		text-decoration: underline
		&:hover
			text-decoration: none
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 0 13px 20px
		position relative
		z-index: 1
		border-radius: 50px
		background-color: #ce2806
		i
			width: 32px;
			height: 32px;
			color #12181b
			font-size 18px
			line-height 32px
			position relative
			z-index 9
		&:hover
			background-color: rgba(#ce2806, .8)
			i
				color #12181b